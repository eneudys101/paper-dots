{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
      {
        "type": "prompt",
        "alignment": "left",
        "segments": [
          {
            "type": "root",
            "style": "plain",
            "foreground": "#5C6D70",
            "background": "transparent"
          },
          {
            "type": "os",
            "style": "plain",
            "foreground": "#5C6D70",
            "background": "transparent"
          },
          {
            "type": "path",
            "style": "plain",
            "foreground": "#3C4E52",
            "background": "transparent"
          },
          {
            "type": "git",
            "style": "plain",
            "foreground": "#68797B",
            "background": "transparent"
          }
        ]
      },
      {
        "type": "prompt",
        "alignment": "right",
        "segments": [
          {
            "type": "time",
            "style": "plain",
            "foreground": "#5C6D70",
            "background": "transparent",
            "properties": {
              "time_format": "15:04:05"
            }
          }
        ]
      }
    ],
    "final_space": true,
    "console_title": true,
    "console_title_style": "folder",
    "osc99": true
  }
  