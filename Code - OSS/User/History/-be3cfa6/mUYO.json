{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "version": 2,
    "final_space": true,
    "palette": {
      "python_fg": "#AB5236",     // Rusty Red (Python segment)
      "root_fg": "#FF4B82",       // Vibrant Pink (Root segment)
      "os_fg": "#4FB8CC",         // Muted Blue (OS segment)
      "session_fg": "#5A7D4E",    // Muted Green (Session segment)
      "path_fg": "#7868B5",       // Muted Purple (Path segment)
      "git_fg": "#EFAF58",        // Muted Gold (Git segment)
      "time_fg": "#7F7F7F",       // Gray (Time segment)
      "prompt_fg": "#404040"      // Dark Gray (Prompt segment)
    },
    
    },
    "blocks": [
      {
        "type": "prompt",
        "alignment": "left",
        "segments": [
          {
            "type": "python",
            "style": "powerline",
            "foreground": "p:python_fg",
            "fetch_virtual_env": "true",
            "display_deafult": "base",
            "template": " \uE235 {{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }}{{ .Venv }} {{ end }}{{ .Full }}{{ end }} "
          },
          {
            "type": "root",
            "style": "plain",
            "foreground": "p:root_fg",
            "background": "transparent",
            "template": " \uf0e7 "
          },
          {
            "type": "os",
            "style": "plain",
            "foreground": "p:os_fg",
            "background": "transparent",
            "template": " {{ if .WSL }}WSL at {{ end }}{{.Icon}} "
          },
          {
            "foreground": "p:session_fg",
            "style": "plain",
            "template": "{{ .UserName }}@{{ .HostName }} ",
            "type": "session"
          },
          {
            "type": "path",
            "style": "plain",
            "foreground": "p:path_fg",
            "background": "transparent",
            "template": " {{ .Path }} ",
            "properties": {
              "folder_icon": "..\ue5fe..",
              "home_icon": "~",
              "style": "agnoster_short"
            }
          },
          {
            "foreground": "p:git_fg",
            "properties": {
              "branch_icon": "\ue725 ",
              "cherry_pick_icon": "\ue29b ",
              "commit_icon": "\uf417 ",
              "fetch_status": false,
              "fetch_upstream_icon": false,
              "merge_icon": "\ue727 ",
              "no_commits_icon": "\uf594 ",
              "rebase_icon": "\ue728 ",
              "revert_icon": "\uf0e2 ",
              "tag_icon": "\uf412 "
            },
            "template": "{{ .HEAD }} ",
            "style": "plain",
            "type": "git"
          }
        ]
      },
      {
        "type": "prompt",
        "alignment": "right",
        "segments": [
          {
            "type": "time",
            "style": "plain",
            "foreground": "p:time_fg",
            "background": "transparent",
            "template": " {{ .CurrentDate | date .Format }} ",
            "properties": {
              "time_format": "2:04:05"
            }
          }
        ]
      },
      {
        "type": "prompt",
        "alignment": "left",
        "newline": true,
        "segments": [
          {
            "type": "text",
            "style": "plain",
            "foreground": "p:prompt_fg",
            "background": "transparent",
            "template": " âžœ "
          }
        ]
      }
    ],
    "osc99": true
  }
  